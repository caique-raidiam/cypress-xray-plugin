{
  "compilerOptions": {
    "allowJs": true,
    "target": "esnext",
    "importHelpers": true,
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["esnext", "dom"],
    "paths": {
      "@eventbus": ["./src/plugins/eventbus.ts"],
      "@/*": ["./src/*"],
    },
    "types": [
      "vite/client",
      "cypress"
    ],
  },
  "include": ["src/**/*.ts", "cypress/**/*.ts","src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"],
  "references": [{ "path": "tsconfig.node.json" }]
}
